<!DOCTYPE html>
<html lang="en">

<head>
    {{>BackEnd/headerLink}}
</head>

<body id="page-top">


    <!-- Page Wrapper -->
    <div id="wrapper">

        {{>BackEnd/sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {{>BackEnd/topbar}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <h1 class="h3 mb-2 text-gray-800">
                                {{#if blogData.id}}
                                Edit Blog
                                {{else}}
                                Add Blog
                                {{/if}}
                                <span class="float-right"> <a href="blog-list" class="btn btn-primary btn-block">
                                        Blog List
                                    </a></span>
                            </h1>
                            <form class="user" action="/add-blog" method="POST">
                                <input type="hidden" name="editId" value="{{blogData.id}}">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label">Category</label>
                                            <select class="form-control" id="category_id" name="category_id">
                                                <option value="" >Select Category</option>
                                                {{#each blogCategory as |data|}}
                                                        <option value="{{data.id}}" >{{data.category_name}}</option>
                                                    {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label">Title</label>
                                            <input type="text" class="form-control"
                                                placeholder="Enter Title..." name="title"
                                                value="{{blogData.title}}">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label">Date</label>
                                            <input type="date" class="form-control"
                                                 name="dateOfBlog"
                                                value="{{blogData.dateOfBlog}}">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-label">Description</label>
                                            <textarea class="form-control form-control-user" placeholder="Enter Description..." name="description" id="description"></textarea>

                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="form-group">
                                            <button class="btn btn-primary btn-user btn-block" type="submit">
                                                Save
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            {{>BackEnd/footer}}

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    {{>BackEnd/footerLink}}   

</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        var selectedValue = "{{ blogData.category_id }}";
        $('#category_id').val(selectedValue);
        $('#category_id').on('change', function () {
            var newSelectedValue = $(this).val();            
        });
    });
</script>
 <script>
        CKEDITOR.replace( 'description' );
    </script>
</html>