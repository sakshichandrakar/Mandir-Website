<!DOCTYPE html>
<html lang="en">

<head>
  {{>BackEnd/headerLink}}
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        {{>BackEnd/sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

               {{>BackEnd/topbar}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->

                     <div class="card shadow mb-4">
                        <div class="card-header py-3">
                           <h1 class="h3 mb-2 text-gray-800">Blog List<span class="float-right"><a href="add-blog" class="btn btn-primary btn-user btn-block" >
                                   Add Blog
                                </a></span> </h1>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Category</th>
                                            <th>Title</th>
                                            <th>Date</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        {{#each blogData as |data|}}
                                        <tr>
                                            <td>{{data.category_name}}</td>
                                            <td>{{data.title}}</td>
                                            <td>{{data.dateOfBlog}}</td>                                                 
                                            <td>{{{data.description}}}</td>
                                            <td>
                                                <span class="d-flex"><a href="add-blog" class="btn btn-danger btn-circle btn-sm m-0">
                                                  <i class="fas fa-trash"></i>
                                                </a>
                                                <a href="/edit-blog?id={{data.id}}" class="btn btn-primary btn-circle btn-sm">
                                                  <i class="fas fa-edit"></i>
                                                </a></span>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            {{>BackEnd/footer}}

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
   {{>BackEnd/footerLink}}
</body>

</html>