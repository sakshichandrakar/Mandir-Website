<!DOCTYPE html>
<html lang="en">

<head>
  {{>BackEnd/headerLink}}
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        {{>BackEnd/sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

               {{>BackEnd/topbar}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->

                     <div class="card shadow mb-4">
                        <div class="card-header py-3">
                           <h1 class="h3 mb-2 text-gray-800">Blog Category</h1>
                        </div>
                        
                        <div class="card-body">
                             <form class="user" action="/add-blog-category" method="POST">
                                    <input type="hidden" name="editId" value="{{blogCategoryEditData.id}}">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-label" >Category Name</label>

                                                <input type="text" class="form-control form-control-user"
                                                placeholder="Enter Name..." name="category_name" value="{{blogCategoryEditData.category_name}}">
                                            </div>
                                        </div>
                                        
                                        <div class="col-lg-2 mb-5">
                                            <div class="form-group py-4">
                                                <button class="btn btn-primary btn-user btn-block" type="submit">
                                                Save
                                                </button>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Category Name</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Category Name</th>
                                            <th>Statue</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each blogCategoryData as |data|}}
                                        <tr>
                                            <td>{{data.category_name}}</td>
                                            <td>Status</td>
                                            <td>
                                                <span class="d-flex"><a href="add-category" class="btn btn-danger btn-circle btn-sm m-0">
                                                  <i class="fas fa-trash"></i>
                                                </a>
                                                <a href="/edit-blog-category?id={{data.id}}" class="btn btn-primary btn-circle btn-sm">
                                                  <i class="fas fa-edit"></i>
                                                </a></span>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            {{>BackEnd/footer}}

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

   {{>BackEnd/footerLink}}

</body>

</html>