<!DOCTYPE html>
<html lang="en">

<head>
  {{>BackEnd/headerLink}}
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        {{>BackEnd/sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

               {{>BackEnd/topbar}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <h1 class="h3 mb-2 text-gray-800">
                               {{#if testimonial_data.id}}
                                Edit Testimonial
                                {{else}}
                                Add Testimonial
                                {{/if}}
                                <span class="float-right"> <a href="testimonial" class="btn btn-primary btn-block" >
                                   List Testimonial
                                </a></span></h1>
                            <form class="user" action="testimonial" method="POST">
                                <input type="hidden" name="editId" value="{{testimonial_data.id}}">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-label" >Name</label>
                                            <input type="text" class="form-control form-control-user"
                                            placeholder="Enter Name..." name="name" value="{{testimonial_data.name}}">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-label" >Message</label>
                                            <textarea class="form-control form-control-user" placeholder="Enter Message..." id="message" name="message" >{{testimonial_data.message}}</textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="form-group">
                                            <button class="btn btn-primary btn-user btn-block" type="submit">
                                               Save
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            {{>BackEnd/footer}}

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

   {{>BackEnd/footerLink}}
  
</body>

</html>