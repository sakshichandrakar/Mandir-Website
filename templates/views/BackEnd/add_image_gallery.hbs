<!DOCTYPE html>
<html lang="en">

<head>
  {{>BackEnd/headerLink}}
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        {{>BackEnd/sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

               {{>BackEnd/topbar}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <h1 class="h3 mb-2 text-gray-800">
                               {{#if testimonial_data.id}}
                                Edit Image Gallery
                                {{else}}
                                Add Image Gallery
                                {{/if}}
                                <span class="float-right"> <a href="image-gallery" class="btn btn-primary btn-block" >
                                   List Image Gallery
                                </a></span></h1>
                                <form class="user" action="testimonial" method="POST">
                                    <input type="hidden" name="editId" value="{{testimonial_data.id}}">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-label" >Category</label>
                                                <select class="form-control" id="exampleFormControlSelect1">
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                    <option>4</option>
                                                    <option>5</option>
                                                    </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-label" >Title</label>
                                                <input type="text" class="form-control form-control-user"
                                                placeholder="Enter Title..." name="title" value="{{testimonial_data.title}}">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-label" >Description</label>
                                                <textarea class="form-control form-control-user" placeholder="Enter Description..." id="description" name="description" >{{testimonial_data.description}}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-lg-2">
                                            <div class="form-group">
                                                <button class="btn btn-primary btn-user btn-block" type="submit">
                                                Save
                                                </button>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            {{>BackEnd/footer}}

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

